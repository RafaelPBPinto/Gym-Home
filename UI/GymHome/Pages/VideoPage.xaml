<Page
    x:Class="GymHome.VideoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GymHome"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White"
    Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="LightBlue" Grid.ColumnSpan="2"/>
        <Button VerticalAlignment="Center"
                Command="{Binding GoBackCommand}"
                BorderBrush="AliceBlue"
                BorderThickness="3">
            <TextBlock Text="Voltar"
                           Foreground="Black"
                           FontSize="30"/>
        </Button>
        <TextBlock Foreground="Black" 
                   Text="{Binding Title}"
                   TextWrapping="WrapWholeWords"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.ColumnSpan="2"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Padding="20"
                   />

        <ContentControl Content="{Binding MediaPlayerElement}"
                        HorizontalAlignment="Stretch"
                        Grid.Row="1"/>

        <Grid Grid.Row="1"
              Visibility="{Binding NextVideoPromptVisibility}">
            <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="LightBlue"
                        Padding="20"
                        CornerRadius="10">
                <TextBlock Foreground="Black"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           Text="{Binding PromptMessage}">
                </TextBlock>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Command="{Binding NextVideoCommand}"
                            CornerRadius="10"
                            Background="LightSkyBlue"
                            Margin="0,0,20,0">
                        <TextBlock Foreground="Black"
                                   FontSize="20">
                            Sim
                        </TextBlock>
                    </Button>
                    <Button Command="{Binding ClosePromptCommand}"
                            CornerRadius="10"
                            Background="LightSkyBlue">
                        <TextBlock Foreground="Black"
                                   FontSize="20">
                            Nao
                        </TextBlock>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <InfoBar
            Title="A processar:"
            Message="{Binding Message}"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            IsOpen="{Binding IsOpen}"
            Foreground="Black"
            Background="LightBlue"
            IsClosable="False"
            CornerRadius="5"
            Margin="10,0,0,10">
        </InfoBar>
        
        <Image Source="{Binding MicrofoneImageSource}"
               Grid.Column="1"
               Grid.Row="1"
               Width="50"
               VerticalAlignment="Bottom"
               HorizontalAlignment="Right"
               Margin="0 0 10 10"
               />
    </Grid>
</Page>
